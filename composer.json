{
    "name": "antonskudilo/cliver",
    "description": "The skeleton application for the Cliver CLI framework",
    "type": "project",
    "keywords": [
        "cliver",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": ">=8.3",
        "antonskudilo/cliver-core": "^0.1",
        "ext-pdo": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always tests/"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "^12.4"
    }
}
